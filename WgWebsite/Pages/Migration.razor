@page "/migration"
@{
    var mig = new WgWebsite.Data.Migration.MigrationFromV1();
    string userjson = "";
    string tasksjson = "";
}
<AuthorizeView>
    <Authorized>
        @if (context.User.Claims.Any(c => WgWebsite.Model.Roles.Admin == c.Value))
        {
            <textarea placeholder="users" @bind="userjson"></textarea>
            <button class="btn btn-primary" @onclick=@(e => mig.MigrateUsers(userjson))>Send Users</button>

            <textarea placeholder="tasks" @bind="tasksjson"></textarea>
            <button class="btn btn-primary" @onclick=@(e => mig.MigrateTasks(tasksjson))>Send Users</button>
        }
    </Authorized>
</AuthorizeView>